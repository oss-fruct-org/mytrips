<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#ffeeeeee"
              android:padding="8dp"
              tools:context="org.fruct.oss.audioguide.fragments.PointDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffffff"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="128dp"
            android:layout_height="128dp"

            android:background="#ffcccccc"
            android:padding="2dp"
            android:scaleType="centerInside"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <TextView
            android:id="@android:id/text1"
            android:textSize="22sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="#ff58585B" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@android:id/text2"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="#ff58585B"/>
        </LinearLayout>
    </ScrollView>


        <ImageButton
            android:id="@+id/edit_point_imagebutton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#ffffffff"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_action_edit_d"/>

        <ImageButton
            android:id="@+id/add_to_track_imagebutton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#ffffffff"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/edit_point_imagebutton"
            android:src="@drawable/ic_action_share_d"/>
    </RelativeLayout>


</LinearLayout>
